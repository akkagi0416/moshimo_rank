<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <div class="container">
      <h1 class="logo">logo</h1>
    </div>
    <div class="nav_wrap">
      <div class="container">
        <nav>
          <ul class="nav navbar-nav">
            <li class="active"><a href="#">menu1</a></li>
            <li><a href="#">menu2</a></li>
            <li><a href="#">menu3</a></li>
          </ul>
        </nav>
      </div>
    </div>
  </header>

  <div class="container">
    <div class="row">
      <aside class="col-md-2">
        <% 1.upto(9).map{|i| "%02d" % i }.push('jun', 'all').each do |category| %>
          <div><%= link_to MY_APP['category'][category], rankings_path(category) %></div>
        <% end %>
        <button class="btn btn-primary">検索</button>
      </aside>
      <div class="col-md-10">
        <%= yield %>
      </div>
    </div>
  </div>

  <footer>
  </footer>
</body>
</html>
